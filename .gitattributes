# ==========================================
# Git Attributes for Line Endings
# ==========================================
* text=auto

# ==========================================
# Python
# ==========================================
*.py text eol=lf
*.pyw text eol=lf

# ==========================================
# Shell Scripts
# ==========================================
*.sh text eol=lf
*.bash text eol=lf

# ==========================================
# Documentation
# ==========================================
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# ==========================================
# Binary Files
# ==========================================
*.pt binary
*.pth binary
*.pkl binary
*.h5 binary
*.hdf5 binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary
*.tar.gz binary
*.rar binary

# ==========================================
# Model Files
# ==========================================
*.pb binary
*.model binary
*.weights binary

# ==========================================
# IDE Config Files
# ==========================================
.vscode/** merge=union
.idea/** merge=union
